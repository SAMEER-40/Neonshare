rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users collection
    match /users/{username} {
      // Anyone can read user profiles (for friend lookup)
      allow read: if true;
      
      // Authenticated users can create accounts
      allow create: if request.auth != null;
      
      // Only the user can update their own profile
      // Note: Since we use username-based auth, we check if the document username matches
      allow update: if request.auth != null && 
                       request.resource.data.username == resource.data.username;
      
      // No deletion allowed
      allow delete: if false;
    }
    
    // Photos collection
    match /photos/{photoId} {
      // Any authenticated user can read photos they uploaded or are tagged in
      // Simplified: allow reads to any authenticated user (privacy handled client-side)
      allow read: if request.auth != null;
      
      // Any authenticated user can create photos
      allow create: if request.auth != null &&
                       request.resource.data.uploader is string &&
                       request.resource.data.timestamp is number;
      
      // Only uploader can update/delete
      // Note: With custom username auth (anonymous Firebase Auth), we store the
      // uploader username in the document. We use request.auth.token.name to
      // match against it. If migrating to Firebase Auth email/password, update
      // to use request.auth.uid instead.
      allow update: if request.auth != null && 
                       resource.data.uploader == request.resource.data.uploader;
      allow delete: if request.auth != null &&
                       resource.data.uploader == request.auth.token.name;
      
      // Reactions subcollection
      match /reactions/{reactionId} {
        // Any authenticated user can read reactions
        allow read: if request.auth != null;
        
        // Any authenticated user can create/delete reactions
        // Note: Using custom username auth, so we can't enforce userId check
        allow create, update, delete: if request.auth != null;
      }
      
      // Comments subcollection
      match /comments/{commentId} {
        // Any authenticated user can read comments
        allow read: if request.auth != null;
        
        // Any authenticated user can create comments
        allow create: if request.auth != null &&
                        request.resource.data.userId is string &&
                        request.resource.data.text is string &&
                        request.resource.data.timestamp is number;
        
        // Users can only delete their own comments
        allow delete: if request.auth != null &&
                        resource.data.userId == request.auth.token.name;
      }
    }
  }
}